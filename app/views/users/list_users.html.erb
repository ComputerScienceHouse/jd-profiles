<div style="text-align:center;">
    <%= render :partial => "pagination", :locals => { current: @current, url: @url } %>
</div>
<% if @users.length == 0 %>
    <h3 style="text-align: center">No Users found</h3>
<% else %>
    <% @users.each_slice(4).each do |row| %>
        <div class="custom-row">
            <% row.each do |user| %>
                <div class="custom-column">
                    <ul class="pricing-table" data-equalizer-watch style="margin: 0px">
                        <%= link_to "/user/#{user["uid"][0]}"  do %>
                            <li class="title" style="overflow:hidden; white-space: nowrap; padding: 10px;">
                            <div class="row">
                                <div class="medium-5 columns">
                                    <%= image_tag "/image/#{user["uid"][0]}" %>
                                </div>
                                <div class="medium-7 columns">
                                <p style="text-align:center; margin-top: 25%; word-wrap:break-word;"><%= user["uid"][0] %><p>
                            </div>
                        </div>
                            </li>
                        <% end %>
                        <li class="bullet-item" style="word-wrap:break-word; padding: 10px"><%= user["cn"][0] %></li>
                    </ul>
                    <br> 
                </div>
                <% for i in row.length..4 %>
                    <div class="custom-column"></div>
                <% end %>
            <% end %>
        </div>
    <% end %>
<% end %>
