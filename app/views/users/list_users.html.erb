<div style="text-align:center;">
  <% if @current %>
    <div class="pagination-centered">
      <ul class="pagination">
        <% ("a".ord.."z".ord).each do |char| %>
          <% if char == @current.ord %>
            <li class="current">
          <% else %>
            <li>
          <% end %>
          <a rel="start" href="/<%= @url %>?page=<%= char.chr %>" style="padding: 5px"><%= char.chr %></a></li>
        <% end %>
      </ul>
    </div>
    <br />
  <% end %>
</div>
<% if @users.length == 0 %>
  <h3 style="text-align: center">No Users found</h3>
<% else %>
  <div class="user-row">
    <% @users.each do |user| %>
      <div class="user-column">
        <ul class="pricing-table" style="margin: 0px;">
          <%= link_to "/user/#{user["uid"][0]}"  do %>
            <li class="title-bullet">
              <div class="row">
                <div class="large-5 columns" style="min-height: 60px;">
                  <%= image_tag "/image/#{user["uid"][0]}", class: "profile-pic" %>
                </div>
                <div class="large-7 columns">
                  <p class="uid-bullet"><%= user["uid"][0] %><p>
                </div>
              </div>
            </li>
          <% end %>
          <li class="cn-bullet"><%= user["cn"][0] %></li>
        </ul>
        <br> 
      </div>
    <% end %>
    <% for i in (@users.length % 4)..4 %>
      <div class="user-column"></div>
    <% end %>
  </div>
<% end %>
